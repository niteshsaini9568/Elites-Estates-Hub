<% if(success && success.length) { %>
  <div class="alert-container position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 1100; width: 100%; max-width: 600px;">
    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center shadow-lg" role="alert">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-check-circle-fill flex-shrink-0 me-3" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
      </svg>
      <div class="flex-grow-1"><%= success %></div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
  <% } %>
  
  <% if(error && error.length) { %>
  <div class="alert-container position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 1100; width: 100%; max-width: 600px;">
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center shadow-lg" role="alert">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-3" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
      </svg>
      <div class="flex-grow-1"><%= error %></div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
  <% } %>
  
  <style>
    .alert-container {
      animation: slideIn 0.3s ease-out forwards;
    }
    
    @keyframes slideIn {
      from {
        transform: translate(-50%, -50px);
        opacity: 0;
      }
      to {
        transform: translate(-50%, 0);
        opacity: 1;
      }
    }
    
    .alert {
      border-radius: 10px;
      border-left: 5px solid;
    }
    
    .alert-success {
      border-left-color: #2e7d32;
    }
    
    .alert-danger {
      border-left-color: #c62828;
    }
  </style>