<% layout("/layouts/boilerplate") %>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh; margin: 20px 0;">
  <div class="card border-0 shadow-lg rounded-lg overflow-hidden" style="width: 100%; max-width: 450px;">
    <div class="card-header text-white py-4" style="background-color: #1d3557;">
      <div class="d-flex align-items-center justify-content-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-lock-fill me-2" viewBox="0 0 16 16">
          <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
        </svg>
        <h1 class="h4 mb-0 text-center">Welcome Back</h1>
      </div>
    </div>
    
    <div class="card-body p-5">
      <form action="/login" method="post" class="needs-validation" novalidate>
        <div class="mb-4">
          <label for="username" class="form-label fw-bold">Username or Email</label>
          <div class="input-group">
            <span class="input-group-text bg-light">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
              </svg>
            </span>
            <input name="username" id="username" type="text" class="form-control py-2" placeholder="Enter your username" required />
            <div class="invalid-feedback">
              Please enter your username.
            </div>
          </div>
        </div>
        
        <div class="mb-4">
          <label for="password" class="form-label fw-bold">Password</label>
          <div class="input-group">
            <span class="input-group-text bg-light">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
                <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z"/>
                <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
              </svg>
            </span>
            <input name="password" id="password" type="password" class="form-control py-2" placeholder="Enter your password" required />
            <div class="invalid-feedback">
              Please enter your password.
            </div>
          </div>
          <div class="text-end mt-2">
            <a href="/forgot-password" class="text-decoration-none small text-muted">Forgot password?</a>
          </div>
        </div>
        
        <button class="btn btn-primary w-100 py-2 mb-3 fw-bold" type="submit" style="background-color: #1d3557;">
          Sign In
        </button>
        
        <div class="d-flex align-items-center my-4">
          <hr class="flex-grow-1"/>
          <span class="px-3 text-muted small">OR</span>
          <hr class="flex-grow-1"/>
        </div>
        
        <a href="/google" class="btn btn-outline-primary w-100 py-2 d-flex align-items-center justify-content-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
            <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
          </svg>
          Continue with Google
        </a>
        
        <div class="text-center mt-4">
          <p class="small text-muted">Don't have an account? <a href="/register" class="text-primary text-decoration-none">Sign up</a></p>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict';
    var forms = document.querySelectorAll('.needs-validation');
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>