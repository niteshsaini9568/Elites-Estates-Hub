<% layout("/layouts/boilerplate") %>
<style>
  .auth-card {
    border-radius: 12px;
    border: none;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }
  .auth-header {
    color: #1d3557;
    font-weight: 600;
  }
  .form-control-auth {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 12px 15px;
    transition: all 0.3s;
  }
  .form-control-auth:focus {
    border-color: #1d3557;
    box-shadow: 0 0 0 3px rgba(29, 53, 87, 0.1);
  }
  .btn-auth {
    background-color: #1d3557;
    border-radius: 8px;
    padding: 10px 20px;
    font-weight: 500;
    transition: all 0.3s;
  }
  .btn-auth:hover {
    background-color: #142a47;
    transform: translateY(-1px);
  }
  .btn-google {
    background-color: white;
    color: #1d3557;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 10px 20px;
    font-weight: 500;
    transition: all 0.3s;
  }
  .btn-google:hover {
    background-color: #f8f9fa;
    border-color: #d0d0d0;
  }
  .divider {
    display: flex;
    align-items: center;
    text-align: center;
    color: #6c757d;
    margin: 20px 0;
  }
  .divider::before, .divider::after {
    content: "";
    flex: 1;
    border-bottom: 1px solid #e0e0e0;
  }
  .divider::before {
    margin-right: 15px;
  }
  .divider::after {
    margin-left: 15px;
  }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh;">
  <div class="auth-card bg-white p-4 p-md-5" style="width: 100%; max-width: 500px;">
    <div class="text-center mb-5">
      <h2 class="auth-header mb-3">Create Your Account</h2>
      <p class="text-muted">Join our community today</p>
    </div>
    
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-4">
        <label for="username" class="form-label fw-semibold">Username</label>
        <input name="username" id="username" type="text" class="form-control form-control-auth" 
               placeholder="Enter your username" required />
        <div class="invalid-feedback">
          Please choose a username.
        </div>
      </div>
      
      <div class="mb-4">
        <label for="email" class="form-label fw-semibold">Email</label>
        <input name="email" id="email" type="email" class="form-control form-control-auth" 
               placeholder="Enter your email" required />
        <div class="invalid-feedback">
          Please provide a valid email.
        </div>
      </div>
      
      <div class="mb-4">
        <label for="password" class="form-label fw-semibold">Password</label>
        <input name="password" id="password" type="password" class="form-control form-control-auth" 
               placeholder="Create a password" required />
        <div class="invalid-feedback">
          Please create a password.
        </div>
        <small class="text-muted">Use 8 or more characters with a mix of letters, numbers & symbols</small>
      </div>
      
      <button type="submit" class="btn btn-auth text-white w-100 mb-3">
        Sign Up
      </button>
      
      <div class="divider">or</div>
      
      <a href="/google" class="btn btn-google w-100 d-flex align-items-center justify-content-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
          <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
        </svg>
        Continue with Google
      </a>
    </form>
    
    <div class="text-center mt-4 pt-3">
      <p class="text-muted">Already have an account? 
        <a href="/login" class="text-decoration-none fw-semibold" style="color: #1d3557;">Log In</a>
      </p>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict';
    var forms = document.querySelectorAll('.needs-validation');
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>